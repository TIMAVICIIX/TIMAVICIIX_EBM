<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <label id="TitleLabel">
                            <text>Title Space</text>
                        </label>
                    </children>
                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    <positioning type="relative">50,3</positioning>
                </flow-layout>
                <flow-layout direction="horizontal">
                    <children>
                        <button id="BackBtn">
                            <text>Quit</text>
                        </button>
                    </children>
                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    <positioning type="relative">100,5</positioning>
                </flow-layout>

                <label id="TextDisplayLabel">
                    <text translate="true">text.timaviciix_ebm.example_display</text>
                    <max-width>180</max-width>

                    <margins>
                        <all>15</all>
                    </margins>
                    <horizontal-text-alignment>left</horizontal-text-alignment>
                    <vertical-text-alignment>top</vertical-text-alignment>
                    <positioning type="relative">30,28</positioning>
                </label>

                <flow-layout direction="horizontal">
                    <children>
                        <button id="inspector-button">
                            <text>⚡ Inspector</text>
                        </button>

                        <box>
                            <color>#FF696969</color>
                            <sizing>
                                <vertical method="fixed">16</vertical>
                                <horizontal method="fixed">1</horizontal>
                            </sizing>
                            <margins>
                                <horizontal>5</horizontal>
                            </margins>
                        </box>

                        <button id="previous-button">
                            <text>⏴ Previous</text>
                            <margins>
                                <right>2</right>
                            </margins>
                        </button>
                        <button id="next-button">
                            <text>Next ⏵</text>
                        </button>
                    </children>

                    <positioning type="relative">50,105</positioning>

                    <vertical-alignment>center</vertical-alignment>

                    <surface>
                        <panel dark="true"/>
                    </surface>

                    <padding>
                        <all>6</all>
                    </padding>

                    <margins>
                        <bottom>15</bottom>
                    </margins>
                </flow-layout>

            </children>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
            <surface>
                <flat>#C0101010</flat>
            </surface>
            <padding>
                <all>5</all>
            </padding>
        </flow-layout>
    </components>
</owo-ui>
