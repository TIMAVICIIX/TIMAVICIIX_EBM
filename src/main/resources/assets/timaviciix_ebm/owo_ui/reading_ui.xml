<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <flow-layout direction="horizontal" id="background">
                    <children>
                        <texture texture="timaviciix_ebm:textures/gui/reading_gui.png" region-width="256"
                                 region-height="192">
                            <sizing>
                                <vertical method="fill">90</vertical>
                                <horizontal method="fill">70</horizontal>
                            </sizing>
                        </texture>

                        <label id="TextDisplayLabelLeft">
                            <max-width>130</max-width>
                            <margins>
                                <all>15</all>
                            </margins>
                            <horizontal-text-alignment>left</horizontal-text-alignment>
                            <vertical-text-alignment>top</vertical-text-alignment>
                            <positioning type="relative">11,36</positioning>
                        </label>

                        <label id="TextDisplayLabelRight">
                            <max-width>130</max-width>
                            <margins>
                                <all>15</all>
                            </margins>
                            <horizontal-text-alignment>left</horizontal-text-alignment>
                            <vertical-text-alignment>top</vertical-text-alignment>
                            <positioning type="relative">90,36</positioning>
                        </label>
                    </children>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>
                        <label id="TitleLabel">
                            <text>Title Space</text>
                        </label>
                    </children>
                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    <positioning type="relative">50,3</positioning>
                </flow-layout>
                <flow-layout direction="vertical">
                    <children>
                        <button id="BackBtn">
                            <text>Quit</text>
                        </button>
                    </children>
                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    <positioning type="relative">100,5</positioning>
                </flow-layout>

                <flow-layout direction="vertical">
                    <children>
                        <button id="inspector-button">
                            <text>âš¡ Inspector</text>
                        </button>
                    </children>
                    <positioning type="relative">100,105</positioning>

                    <vertical-alignment>center</vertical-alignment>

                    <surface>
                        <panel dark="true"/>
                    </surface>

                    <padding>
                        <all>1</all>
                    </padding>

                    <margins>
                        <bottom>10</bottom>
                    </margins>
                </flow-layout>

            </children>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
            <surface>
                <flat>#C0101010</flat>
            </surface>
            <padding>
                <all>5</all>
            </padding>
        </flow-layout>
    </components>
    <templates>
        <background-texture>
            <texture/>
        </background-texture>
    </templates>
</owo-ui>
