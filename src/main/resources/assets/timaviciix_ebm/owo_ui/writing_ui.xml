<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <flow-layout direction="horizontal" id="background">
                    <children>
                        <texture texture="timaviciix_ebm:textures/gui/reading_gui.png" region-width="256"
                                 region-height="192">
                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                            <positioning type="relative">50,50</positioning>
                        </texture>

                        <flow-layout direction="horizontal">
                            <children>
                                <label id="TextDisplayLabelLeft">
                                    <margins>
                                        <top>4</top>
                                        <right>5</right>
                                        <left>24</left>
                                    </margins>
                                    <sizing>
                                        <vertical method="fill">80</vertical>
                                        <horizontal method="fill">88</horizontal>
                                    </sizing>
                                    <positioning type="relative">54,50</positioning>
                                </label>
                            </children>
                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <text-box id="TextWriteLabelRight">
                                    <margins>
                                        <top>4</top>
                                        <left>5</left>
                                        <right>24</right>
                                    </margins>
                                    <sizing>
                                        <vertical method="fill">80</vertical>
                                        <horizontal method="fill">88</horizontal>
                                    </sizing>
                                    <positioning type="relative">46,50</positioning>
                                </text-box>
                            </children>
                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                        </flow-layout>
                    </children>
                    <sizing>
                        <vertical method="fill">92</vertical>
                        <horizontal method="fill">70</horizontal>
                    </sizing>
                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>
                    <positioning type="relative">50,50</positioning>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>
                        <label id="TitleLabel">
                            <text>Title Space</text>
                        </label>
                    </children>
                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    <positioning type="relative">50,3</positioning>
                </flow-layout>
                <flow-layout direction="vertical">
                    <children>
                        <button id="BackBtn">
                            <text>Quit</text>
                        </button>
                    </children>
                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    <positioning type="relative">100,5</positioning>
                </flow-layout>

                <flow-layout direction="vertical">
                    <children>
                        <button id="inspector-button">
                            <text>âš¡ Inspector</text>
                        </button>
                    </children>
                    <positioning type="relative">100,105</positioning>

                    <vertical-alignment>center</vertical-alignment>

                    <surface>
                        <panel dark="true"/>
                    </surface>

                    <padding>
                        <all>1</all>
                    </padding>

                    <margins>
                        <bottom>10</bottom>
                    </margins>
                </flow-layout>

            </children>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
            <surface>
                <flat>#C0101010</flat>
            </surface>
            <padding>
                <all>5</all>
            </padding>
            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>
        </flow-layout>
    </components>
</owo-ui>
